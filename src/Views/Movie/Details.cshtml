@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@model TrainingNet.Models.Views.MovieViewModel

@{ViewData["Title"] = Localizer["Movie"];}
<partial name="~/Views/Shared/_Details.cshtml" view-data="ViewData" />
<partial name="~/Views/Shared/_Comments.cshtml" view-data="ViewData" />


<form asp-controller="Movie" asp-action="AddComment" asp-method="post">
<p>@(Localizer["TextComment"].Value+" "+Localizer["Movie"].Value)<br><br>
    <input type="text" maxlength="50" name="textComment">
    @Html.HiddenFor(model => model.Id)
    <input type="submit" class="btn btn-default" value=@Localizer["SendComment"] />
    <a asp-action="Index" asp-controller="Movie" class="btn btn-default" >@(@Localizer["Return"].Value)</a>
</p>
</form>


<div class = "form-group">
    <div class = "col-md-10">
        <a asp-action="Index" asp-controller="Movie" class = "btn btn-default" >@(@Localizer["Return"].Value)</a>
    </div>
</div>
