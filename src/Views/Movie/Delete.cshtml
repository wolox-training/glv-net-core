@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@model TrainingNet.Models.Views.MovieViewModel

@{ViewData["Title"] = Localizer["Movie"];}

<partial name="~/Views/Shared/_Details.cshtml" view-data="ViewData" />

@using (Html.BeginForm("Delete", "Movie", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class = "form-group">
        <div class = "col-md-10">
            @Html.HiddenFor(model => model.Id)
            <a asp-action="Index" asp-controller="Movie" class = "btn btn-default" >@(Localizer["Return"].Value)</a>
            <input type = "submit" class = "btn btn-default" value = @Localizer["Delete"] />
        </div>
    </div>
}
