@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@model TrainingNet.Models.Views.MovieViewModel

@{ViewData["Title"] = Localizer["Movie"];}
<partial name="~/Views/Shared/_Details.cshtml" view-data="ViewData" />
<div class = "form-group">
    <div class = "col-md-10">
      <form asp-controller="Movie" asp-action="SendMovieMail" asp-method="post">
        <p>@(Localizer["TextSend"].Value+" "+Localizer["Movie"].Value)<br><br>
            <input type="text" maxlength="50" name="emailAddress">
            @Html.HiddenFor(model => model.Id)
            <input type="submit" class="btn btn-default" value=@Localizer["SendMail"] />
            <a asp-action="Index" asp-controller="Movie" class="btn btn-default" >@(@Localizer["Return"].Value)</a>
        </p>
      </form>
    </div>
</div>
